<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/activity_dad"
    tools:context="com.example.miguel.childloc.DadActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ask Location"
        android:id="@+id/AskLocation"
        android:layout_marginTop="198dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="giveLocation"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/NotShowing"
        android:id="@+id/ShowChildLocation"
        android:layout_marginBottom="85dp"
        android:layout_alignBottom="@+id/AskLocation"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ShowLocation"
        android:onClick="launchMap"
        android:layout_below="@+id/AskLocation"
        android:layout_centerHorizontal="true"
        android:id="@+id/ShowInMap" />



</RelativeLayout>
